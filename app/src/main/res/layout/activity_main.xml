            android:id="@+id/button17"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_shape"
            android:text="3"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button18"
